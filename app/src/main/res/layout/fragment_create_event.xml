<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="com.robertomiranda.countdown.createevent.CreateEventViewModel" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".createevent.CreateEventFragment">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/event_name_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/create_event_event_name"
            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorBackground" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/date_picker"
            style="@style/Body"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:minHeight="@dimen/minTappableSize"
            android:text="@string/create_event_event_date"
            app:layout_constraintEnd_toStartOf="@id/time_picker"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/event_name_container" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/time_picker"
            style="@style/Body"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:minHeight="@dimen/minTappableSize"
            android:text="@string/create_event_event_time"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/date_picker"
            app:layout_constraintTop_toBottomOf="@id/event_name_container" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>